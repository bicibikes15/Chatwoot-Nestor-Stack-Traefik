# === Dominio y URL Frontal ===
CHATWOOT_DOMAIN=chat.tu-dominio.com
FRONTEND_URL=https://chat.tu-dominio.com

# === Conexión a Base de Datos Global (PostgreSQL) ===
POSTGRES_HOST=postgres_global
# Base de datos dedicada para esta instancia de Chatwoot
POSTGRES_DB=chatwoot_nestor_production
# Usuario dedicado para esta instancia, como se crea en el README.
POSTGRES_USER=chatwoot_nestor_prod
# Usa la contraseña segura que creaste para este usuario.
POSTGRES_PASSWORD=CAMBIAME_CON_LA_CLAVE_SEGURA_DE_CHATWOOT

# === Conexión a la Cola Global (Redis) ===
REDIS_HOST=redis_global
# Usa la contraseña que definiste para tu Redis global.
REDIS_PASSWORD=CAMBIAME_CON_LA_CLAVE_DE_TU_REDIS

# === Clave Secreta de Rails ===
# Genera una nueva clave segura con: openssl rand -hex 64
SECRET_KEY_BASE=CAMBIAME_CON_UNA_CLAVE_SECRETA_DE_RAILS

# === Configuración SMTP (Opcional) ===
MAILER_SENDER_EMAIL="Tu Nombre <tu-correo@ejemplo.com>"
SMTP_ADDRESS=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=tu-correo@gmail.com
SMTP_PASSWORD=tu-contraseña-de-aplicacion-de-gmail
SMTP_DOMAIN=gmail.com
SMTP_ENABLE_STARTTLS_AUTO=true